# =================================================================
# Health Tracker Database Configuration
# =================================================================

# Database Type (sqlite | postgresql)
DB_TYPE=postgresql

# PostgreSQL Configuration
# =================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=health_tracker
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# PostgreSQL Connection Pool Settings
# =================================================================
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME_MINUTES=60
DB_MAX_CONN_IDLE_MINUTES=30

# SQLite Configuration (fallback)
# =================================================================
DB_PATH=./health_tracker.db

# Application Configuration
# =================================================================
PORT=8000
ENV=development
REQUEST_TIMEOUT_SECONDS=30

# pgAdmin Configuration (Development Only)
# =================================================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=8080

# =================================================================
# Environment Examples
# =================================================================

# Development Environment:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PASSWORD=postgres
# ENV=development

# Test Environment:
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_NAME=health_tracker_test
# DB_PASSWORD=test_password
# ENV=test

# Production Environment:
# DB_TYPE=postgresql
# DB_HOST=production-db.example.com
# DB_PASSWORD=secure_production_password
# DB_SSL_MODE=require
# ENV=production
